
@{
    ViewBag.Title = "RFPComments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/assets/datatable/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/assets/css/toastr.css" rel="stylesheet" />
<style>
    .bg-primary {
        background: #1c2f61 !important;
    }

    .text-white h1, .text-white h2, .text-white h3, .text-white h4, .text-white h5, .text-white h6 {
        color: #fff !important;
    }

    .selectot {
        width: 100%;
        padding: 5px;
        border: 1px solid #c7c8cc;
        border-radius: 2px;
    }

    .btn-file {
        position: relative;
        overflow: hidden;
        background-color: #1c2f61 !important;
        border-color: #1c2f61 !important;
        margin: 0 10px 10px 0px;
    }

        .btn-file input[type=file] {
            position: absolute;
            top: 0;
            right: 0;
            min-width: 100%;
            min-height: 100%;
            font-size: 100px;
            text-align: right;
            opacity: 0;
            outline: none;
            background: white;
            cursor: inherit;
            display: block;
        }

    .btn-bottom {
        margin: 0 10px 10px 0px;
    }
</style>

<div class="containers">
    
        <div class="container-fluids">
            <div class="card">
                <div class="card-header">
                    View Uploaded Comments
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="example">
                            <thead>
                                <tr>
                                    <th>
                                        SR. NO
                                    </th>
                                    <th>Commented by</th>
                                    <th>
                                        SOC Id
                                    </th>
                                    <th>Service</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.SOC != null)
                                {
                                    var sn = 1;
                                    foreach (var item in ViewBag.SOC as List<ACQ.Web.App.ViewModel.sharedRFP>)
                                    {
                                        <tr>
                                            <td>
                                                @sn
                                            </td>
                                            <td>
                                                @item.UserRole
                                            </td>
                                            <td>
                                                @item.SOCID
                                            </td>
                                            <td>@item.Service</td>
                                            <td class="justify-content-start d-flex">
                                                <a href="@item.UploadedComment.Remove('~')" id="downloadfp" class="btn btn-sm btn-primary btn-bottom" target="_blank">View Uploaded Comments</a>
                                               
                                            </td>
                                        </tr>
                                        sn++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
   
</div>

