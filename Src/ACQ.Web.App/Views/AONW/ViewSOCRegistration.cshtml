@model ACQ.Web.ViewModel.AONW.SAVESOCVIEWMODEL
@{
    ViewBag.Title = "ViewSOCRegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        .labeltext {
            font-family: Georgia, 'Times New Roman', Times, serif
        }
    </style>
</head>
<div class="mt-3 box-properties">
    <div class="tabHead mb-3">
        <div class="row">
            <div class="col-md-6"><h4>SOC List</h4></div>
            <div class="col-md-6"> <a href="@Url.Action("SocPdfRegistration","SocPdfRegistration")" class="btn btn-primary float-right" type="button"><i class="fas fa-plus-square mr-1"></i>SoC Upload</a></div>
        </div>
    </div>

    <hr />

    @if (Model != null && Model.SOCVIEW.Count() > 0)
    {
        <div class="row">
            <div class="col col-12">
                <div id="div1" class="portlet-body flip-scroll" style="overflow: scroll; height: 850px; Width: 100%;">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">SNO.</th>
                                <th scope="col">Item Description</th>
                                <th scope="col">Version</th>
                                <th scope="col">Categorisation</th>
                                <th scope="col">Service Lead Service</th>
                                <th scope="col">4 digit Unique No</th>
                                <th scope="col">SOC Date</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">
                                    Cost
                                </th>
                                <th scope="col">View SoC</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int count = 1;}
                            @foreach (var SOC in Model.SOCVIEW)
                            {
                                <tr>
                                    <th scope="row">@count</th>
                                    <td class="text-wrap">@SOC.item_description</td>
                                    <td>Version @SOC.UniqueID</td>
                                    <td>@SOC.Categorisation</td>
                                    <td>@SOC.Service_Lead_Service</td>
                                    <td>@SOC.SoCCase</td>
                                    @if (@SOC.SoDate != null)
                                    {
                                        <td>@SOC.SoDate.Value.ToString("dd-MMM-yyyy")</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    <td>@SOC.Quantity</td>
                                    <td>@SOC.Cost</td>
                                    <td> <a href="@Url.Action("ViewSocMaster", "AONW", new { ID = SOC.aon_id,mtype=SOC.aon_id})"><i class="fas fa-eye mr-1"></i> </a></td>
                                    <td> <a href="@Url.Action("ViewSocSendMail", "AONW", new { ID = SOC.aon_id,mtype=SOC.aon_id})"><i class="fas fa-eye mr-1"></i> </a></td>


                                    <!--<td class="text-nowrap">

                                            <a href="@Url.Action("EditSocMaster","AONW", new {ID = SOC.aon_id })" onclick="return confirm('Are you sure you want to Edit This Item : @SOC.item_description?')" type="submit" class="btn-data btn btn-success"><i class="fas fa-edit mr-1"></i> </a>
                                            <a href="@Url.Action("DeleteSocMaster","AONW", new {ID = SOC.aon_id })" onclick="return confirm('Are you sure you want to delete?')" type="submit" class="btn-data btn btn-danger"><i class="fas fa-trash mr-1"></i> </a>-->
                                    @*<a href="@Url.Action("index","Efile", new {ID = SOC.aon_id })" onclick="return confirm('Are you sure you want to approve this Item : @SOC.item_description?')" type="submit" class="btn-data btn btn-success"><i class="fas fa-edit mr-1"></i>Approved</a>*@


                                    <!--</td>-->
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            Records Not Found.
        </div>
    }

</div>


<div id="successmsg" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Alert</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="col-md-12">
                    <div id="myTabContent">
                        <div class="tab-pane show" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="row register-form">
                                <div class="col-md-12 ">
                                    <label>@ViewBag.Message</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div><br>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#successmsg").modal('hide');
        var test = "@ViewBag.Message";
        if (test != null && test != "") {
            $("#successmsg").modal('show');
        }
    })
</script>