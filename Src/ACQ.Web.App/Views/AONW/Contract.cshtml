                <div class="col-sm-">
                    <div class="form-group m-0">
                        <input type="text" name="ContractValue" id="ContractValue" placeholder="Contract Value " class="form-control" />

                    </div>
                </div>
            </div>
            <div class="form-group row">

                <label for=" " class=" col-form-label">FE Content</label>
                <div class="col-sm-">
                    <div class="form-group m-0">
                        <input type="text" name="FEContent" id="FEContent" placeholder="FE Content" class="form-control" />

                    </div>
                </div>
            </div>
            <div class="form-group row">

