                <div class="col-sm-">
                    <div class="form-group m-0">
                        <input type="text" name="TaxesAndDuties" id="TaxesAndDuties" placeholder="Taxes and Duties" class="form-control" />

                    </div>
                </div>
            </div>
            <div class="form-group row">

