                            <button class="btn btn-success AddNewStage"><i class="fa fa-plus" aria-hidden="true"></i></button>               @*<button id="DeleteStage" class="btn btn-danger DeleteStage"><i class="fa fa-trash" aria-hidden="true"></i></button>*@
                        </div>

                    </div>
                </div>
            </div>
        </div>
