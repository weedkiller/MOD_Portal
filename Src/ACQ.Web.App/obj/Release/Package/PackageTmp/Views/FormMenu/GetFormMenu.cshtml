@model ACQ.Web.ViewModel.FormMenu.AddFormMenuViewModel
@{
    ViewBag.Title = "GetFormMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/assets/js/jquery.min.js"></script>
<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-6"><h3 class="mb-0">VIEW fORM MENU</h3></div>

        <div class="col-md-6"> <a href="@Url.Action("AddFormMenu","FormMenu")" class="btn btn-primary float-right" type="button"><i class="fas fa-plus-square mr-1"></i>Add Menu</a></div>
    </div>
</div>
<div class="card flex-fill w-100">
    @if (Model != null && Model.menuList.Count() > 0)
    {
        <div class="row">
            <div class="col col-12">
                <div id="div1" class="portlet-body flip-scroll">
                    <table class="table mb-0 table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">SNO.</th>
                                <th scope="col">Form Menu Name </th>
                                <th scope="col">Action Name</th>
                                <th scope="col">Controller</th>
                                <th scope="col">IsActive </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int count = 1;}
                            @foreach (var SOC in Model.menuList)
                            {
                                <tr>
                                    <th scope="row">@count</th>
                                    <td class="text-wrap">@SOC.From_menu</td>
                                    <td>Version @SOC.ActionName</td>
                                    <td>@SOC.Controller</td>
                                    <td>@SOC.IsActive</td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            Records Not Found.
        </div>
    }

</div>

