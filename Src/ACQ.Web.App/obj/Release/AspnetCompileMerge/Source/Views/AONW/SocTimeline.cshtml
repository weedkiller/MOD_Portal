<script>
    $(document).ready(function () {
        $("#item_description").on("change", function () {
            var answer = $("#item_description").val();
            $.ajax(
                {
                    url: '/AONW/BindDDlSoCMByID?id=' + answer,
                    type: 'GET',
                    data: "",
                    contentType: 'application/json; charset=utf-8',
                    success: function (date) {
                        var mdate = moment(date).format("DD:MM:YYYY");
                        $("#SoDate").html(mdate);
                      
                    }
                });
        });
    });
</script>
<script>
    $(document).ready(function () {
        $.ajax(
            {
                url: '/AONW/BindDDl',
                type: 'GET',
                data: "",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    $('#item_description').html('');
                    var options = '';
                    options += '<option value="Select">Select</option>';
                    for (var i = 0; i < data.length; i++) {
                        
                        options += '<option value="' + data[i].aon_id + '">' + data[i].item_description + '</option>';
                    }
                    
                    $('#item_description').append(options);
                }
            });
    });
</script>

