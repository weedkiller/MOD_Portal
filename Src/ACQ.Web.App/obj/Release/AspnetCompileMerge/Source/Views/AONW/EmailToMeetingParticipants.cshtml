@model List<ACQ.Web.ViewModel.AONW.MeetingParticipants>
@{
    ViewBag.Title = "EmailToMeetingParticipants";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string msg = "";
    if (ViewBag.Msgg != null)
    {
        msg = ViewBag.Msgg;
    }
}

<div class="row m-0">
    <div class="mt-3 box-properties col-md-12">
        <div class="bg-secondary rounded-lg px-3 py-4 p-sm-3">
            <div class="row">
                <div class="col-md-12">

                    <div class="tabHead mb-3">
                        <div class="row">
                            <div class="col-md-6"><h4>Send Notifications To Meeting Participants</h4></div>

                        </div>
                    </div>
                    <div class="bg-white p-3">
                        <div class="clearfix"></div>

                        <div class="table-responsive">
                            <table class="table table-bordered ">

                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Designation</th>
                                        <th>Member Type</th>
                                        <th>Email</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.UserName</td>
                                            <td>@item.designation</td>
                                            <td>@item.member_type</td>
                                            <td>
                                                @item.Email
                                            </td>
                                        </tr>
                                    }

                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-12">
                    <button type="button" id="btnclose" class="btn btn-primary  float-right" onclick="sendMails()">Send to All</button>
                    <button class="btn btn-primary float-right" type="button" onclick="window.location='/AONW/ViewMeeting';">Back</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Alert</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @msg
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("ViewMeeting","AONW")" type="button" class="btn btn-primary">Ok</a>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        var msgg = '@msg';
        if (msgg != '')
        $('#exampleModal').modal('show');
    });
    function sendMails() {
        if (confirm("Are you sure to send mail?")) {
            $("#btnclose").html('Sending');
            window.location = '/AONW/SendMailToParticiants';
        }
    }
</script>

