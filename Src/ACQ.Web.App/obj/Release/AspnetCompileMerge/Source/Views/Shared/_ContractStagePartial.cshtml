<div class="card">
    <div class="card-header">
        <h4>View contracts  </h4>
    </div>
    <div class="card-body">

        <div class="table-responsive">


            <table id="example" class="display nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>Amount</th>
                        <th>Payment Made</th>
                        <th>Payment Due</th>

                        @*<th>Date of Contract Sign</th>
                            <th>Descriptions</th>
                            <th>Category</th>
                            <th>Contract Value</th>
                            <th>Final Delivery Date</th>
                            <th>Action</th>*@
                    </tr>
                </thead>
                <tbody id="mainbody">
                    @if (ViewBag.SumOfStage != null)
                    {
                        foreach (var item in ViewBag.SumOfStage)
                        {

                            <tr>
                                <td>@item.Amount</td>
                                <td>@item.TotalPaymentMade</td>
                                <td>@item.DuePayment</td>
                                @*<td>@item.DateOfContractSigning.ToString("dd/M/yyyy").Replace('-', '/')</td>
                                    <td>@item.Descriptions</td>
                                    <td>@item.Category</td>
                                    <td>@item.ContractValue</td>
                                    <td>@item.FinalDeliveryDate.ToString("dd/M/yyyy").Replace('-', '/')</td>

                                    <td>
                                        <a href="/ContractStageList?ContractId=@item.ContractId&cont=false"><i class="fa fa-eye" aria-hidden="true"></i></a>
                                        <a href="/ContractStageList?ContractId=@item.ContractId&cont=true"><i class="fa fa-edit" aria-hidden="true"></i></a>
                                    </td>*@

                            </tr>
                        }
                    }

                </tbody>

            </table>

        </div>
    </div>
</div>



